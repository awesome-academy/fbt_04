<div class="edit-form">
  <%= form_for(@user) do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="form-group">
      <label class="label label-default"><%= f.label t ".fullname" %></label>
      <%= f.text_field :fullname, class: "form-control" %>
    </div>

    <div class="form-group">
      <label class="label label-default"><%= f.label t ".email" %></label>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <span class="label label-default"><%= f.label t ".phone" %></span>
      <%= f.text_field :phone, class: "form-control" %>
    </div>

    <div class="form-group">
      <span class="label label-default"><%= f.label t ".address" %></span>
      <%= f.text_field :address, class: "form-control" %>
    </div>

    <div class="form-group">
      <span class="label label-default"><%= f.label t ".password" %></span>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <div class="form-group">
      <span class="label label-default">
        <%= f.label t ".password_cofirmation" %>
      </span>
      <%= f.password_field :password_confirmation,
        class: "form-control" %>
    </div>
    <button type="submit" class="btn-info"><%= t ".upload" %></button>
  <% end %>
</div>
